{
  "dependencies": {
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "eslint": "^6.5.0",
    "htmlhint": "^0.11.0",
    "husky": "^3.0.7",
    "lint-staged": "^9.4.0",
    "live-server": "^1.2.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.18.2"
  },
  "scripts": {
    "serve:dev": "live-server src",
    "lint": "npm-run-all lint:*",
    "lint:html": "htmlhint src/**/*.html",
    "lint:js": "eslint src/**/*.js",
    "format": "prettier --write src/**/*.{js,ts,json,scss,html}"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 120
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ],
    "*.html": [
      "prettier --write",
      "htmlhint",
      "git add"
    ],
    "*.scss": [
      "prettier --write",
      "git add"
    ],
    "*.ts": [
      "prettier --write",
      "git add"
    ]
  }
}
